                    android:fontFamily="@font/mulish"
                    android:inputType="number" />

                <!-- ÐšÐ½Ð¾Ð¿ÐºÐ° ÑÐ¾Ñ…Ñ€Ð°Ð½ÐµÐ½Ð¸Ñ -->
                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="wrap_content"
