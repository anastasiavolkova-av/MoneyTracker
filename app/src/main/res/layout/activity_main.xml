            <!-- ÐºÐ°Ñ‚ÐµÐ³Ð¾Ñ€Ð¸Ð¸ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="296dp"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
