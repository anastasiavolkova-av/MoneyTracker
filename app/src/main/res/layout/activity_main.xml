                    android:layout_marginBottom="8dp"
                    android:background="@drawable/button_primary_background"
                    android:backgroundTint="#ECE9F2"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/fun_category"
                        android:fontFamily="@font/mulish"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvFunValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulish"
                        android:text="@string/zero_currency"
                        android:textColor="#000000" />
                </LinearLayout>

                <!--                Ð¢Ñ€Ð°Ð½ÑÐ¿Ð¾Ñ€Ñ‚-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/button_primary_background"
                    android:backgroundTint="#E3F2FD"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/transport_category"
                        android:fontFamily="@font/mulish"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTransportValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/zero_currency"
                        android:fontFamily="@font/mulish"
                        android:textColor="#000000" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- Ð­ÐºÑ€Ð°Ð½ Ñ Ð¿Ð¾Ð»ÑÐ¼Ð¸ Ð²Ð²Ð¾Ð´Ð° -->
        <ScrollView
